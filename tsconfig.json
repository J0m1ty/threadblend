{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types",
        ],
        "sourceMap": false,
        "baseUrl": "./",
        "types": [
            "node",
        ]
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "dist"
    ],
}